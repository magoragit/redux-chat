{
  "name":            "redux-chat",
  "version":         "0.0.1",
  "description":     "React / Redux Video chat",
  "repository":      "https://github.com/magoragit/redux-chat",
  "author":          "Magora Systems",
  "license":         "MIT",
  "main":            "gulpfile.js",
  "scripts":         {
    "start": "rm -rf public && gulp",
    "build": "rm -rf public && gulp build --prod",
    "build:dev": "rm -rf public && gulp build",
    "lint":  "eslint src",
    "test":  "mocha src/**/__tests__/*.js --compilers js:babel-core/register --require test/test-helper"
  },
  "keywords":        [
    "gulp",
    "react"
  ],
  "dependencies":    {
    "lodash":      "^3.10.1",
    "react":       "^0.14.5",
    "react-dom":   "^0.14.5",
    "react-redux": "^4.0.6",
    "redux":       "^3.0.5"
  },
  "build":           {
    "source":      "./src",
    "destination": "./public",
    "scripts":     {
      "source":      "./src/main.js",
      "destination": "./public/js/",
      "extensions":  [],
      "filename":    "bundle.js"
    },
    "templates":   {
      "source":      "./src/*.jade",
      "watch":       "./src/*.jade",
      "destination": "./public/",
      "revision":    "./public/**/*.html"
    },
    "styles":      {
      "source":          "./src/less/**/*.less",
      "watch":           "./src/less/**/*.less",
      "destination":     "./public/css/",
      "filename":        "style.css",
      "browserVersions": [
        "last 2 versions",
        "Chrome 34",
        "Firefox 28",
        "iOS 7"
      ]
    },
    "assets":      {
      "source":      "./src/assets/**/*.*",
      "watch":       "./src/assets/**/*.*",
      "destination": "./public/"
    },
    "inject":      {
      "resources": [
        "./public/**/*.css",
        "./public/**/*.js"
      ]
    }
  },
  "devDependencies": {
    "babel":                        "^6.3.26",
    "babel-core":                   "^6.3.26",
    "babel-eslint":                 "^4.1.6",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-preset-es2015":          "^6.3.13",
    "babel-preset-react":           "^6.3.13",
    "babelify":                     "^7.2.0",
    "browser-sync":                 "^2.11.0",
    "browserify":                   "^12.0.1",
    "chai":                         "^3.4.1",
    "envify":                       "^3.4.0",
    "eslint":                       "^1.10.3",
    "eslint-config-airbnb":         "0.0.9",
    "eslint-plugin-react":          "^3.14.0",
    "exorcist":                     "^0.4.0",
    "gulp":                         "^3.9.0",
    "gulp-autoprefixer":            "^1.0.1",
    "gulp-concat":                  "^2.6.0",
    "gulp-duration":                "0.0.0",
    "gulp-inject":                  "^3.0.0",
    "gulp-jade":                    "^0.9.0",
    "gulp-less":                    "^3.0.5",
    "gulp-load-plugins":            "^1.2.0",
    "gulp-replace":                 "^0.5.4",
    "gulp-rev":                     "^4.0.0",
    "gulp-sourcemaps":              "^1.6.0",
    "gulp-streamify":               "0.0.5",
    "gulp-stylus":                  "^2.0.7",
    "gulp-uglify":                  "^1.0.2",
    "gulp-util":                    "^3.0.7",
    "gulp-watch":                   "^4.3.5",
    "history":                      "^1.17.0",
    "jsdom":                        "^5.6.1",
    "livereactload":                "^2.1.0",
    "mocha":                        "^2.3.4",
    "node-notifier":                "^4.4.0",
    "react-bootstrap":              "^0.28.2",
    "react-proxy":                  "^1.1.2",
    "react-router":                 "^1.0.3",
    "redux-devtools":               "^2.1.5",
    "rimraf":                       "^2.5.0",
    "vinyl-source-stream":          "^1.0.0",
    "vinyl-transform":              "^1.0.0",
    "watchify":                     "^3.6.1"
  },
  "browserify":      {
    "transform": [
      [
        "babelify"
      ],
      [
        "envify"
      ]
    ]
  }
}
